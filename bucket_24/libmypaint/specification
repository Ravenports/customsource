DEF[PORTVERSION]=	1.5.1
DEF[SOVERSION]=		1.0.1
DEF[MAJOR]=		${PORTVERSION:R}
# ----------------------------------------------------------------------------

NAMEBASE=		libmypaint
VERSION=		${PORTVERSION}
KEYWORDS=		graphics
VARIANTS=		standard
SDESC[standard]=	Library for making brushstrokes
HOMEPAGE=		https://github.com/mypaint/libmypaint
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://github.com/mypaint/libmypaint/releases/download/v${PORTVERSION}/
DISTFILE[1]=		libmypaint-${PORTVERSION}.tar.xz:main

SPKGS[standard]=	single

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

LICENSE=		ISCL:single
LICENSE_FILE=		ISCL:{{WRKSRC}}/COPYING
LICENSE_SCHEME=		solo

FPC_EQUIVALENT=		graphics/libmypaint

BUILDRUN_DEPENDS=	json-c:single:standard

USES=			gmake libtool pkgconfig gettext-runtime gettext-tools
GNOME_COMPONENTS=	glib introspection intltool
MUST_CONFIGURE=		gnu
CONFIGURE_ARGS=		--enable-nls
			--enable-i18n
INSTALL_TARGET=		install-strip
PLIST_SUB=		MV=${MAJOR}
SOVERSION=		${SOVERSION}
