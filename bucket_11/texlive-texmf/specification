		${WRKSRC}/texmf-dist/doc/generic/m-tx/buildmtxdoc.lua \
		${WRKSRC}/texmf-dist/doc/fonts/drm/fontconvert.sh \
		${WRKSRC}/texmf-dist/doc/fonts/berenisadf/ff-ybd.pe \
