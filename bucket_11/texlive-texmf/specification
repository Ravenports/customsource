		${WRKSRC}/texmf-dist/doc/fonts/gnu-freefont/tools/utility/metafont/bulk_eps_import.py
	${FIND} ${WRKSRC} -name '*.orig' -delete
	${FIND} ${WRKSRC} -name '*.bak' -delete

do-install:
	${CP} -r ${WRKSRC}/texmf-dist ${STAGEDIR}${PREFIX}/
