DEF[PORTVERSION]=	5.15.12
DEF[PATCHLEVEL]=	60
DEF[MINOR_VER]=		${PORTVERSION:R}
DEF[COMPONENT]=		qtwayland
DEF[COMPONENT_CASED]=	QtWayland
# ----------------------------------------------------------------------------

NAMEBASE=		qt5-${COMPONENT}
VERSION=		${PORTVERSION}
KEYWORDS=		wayland
VARIANTS=		standard
SDESC[standard]=	Qt5 - ${COMPONENT_CASED} component (KDE patched)
HOMEPAGE=		https://www.qt.io/
CONTACT=		nobody

DOWNLOAD_GROUPS=	main
SITES[main]=		https://distcache.FreeBSD.org/local-distfiles/kde/KDE/Qt/${PORTVERSION}/
DISTFILE[1]=		kde-qtwayland-${PORTVERSION}p${PATCHLEVEL}.tar.xz:main

SPKGS[standard]=	complete primary dev

OPTIONS_AVAILABLE=	none
OPTIONS_STANDARD=	none

BUILD_DEPENDS=		qt5-qtbase:dev:standard
			qt5-qtxmlpatterns:dev:standard
			wayland:dev:standard
			wayland:tools:standard
BUILDRUN_DEPENDS=	qt5-qtxmlpatterns:primary:standard
			wayland:primary:standard

USES=			qt5 pkgconfig perl:build python:build cpe
CPE_VENDOR=		qt
CPE_PRODUCT=		qt
DISTNAME=		kde-qtwayland-${PORTVERSION}p${PATCHLEVEL}
PLIST_SUB=		QTVER=${PORTVERSION}
			SOMAJORMIN=${PORTVERSION:R}
SOVERSION=		${PORTVERSION}
