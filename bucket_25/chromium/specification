SITES[fpcpatch]=	GITHUB/jrmarino:chromium:${FPC_TAG}
DISTFILE[1]=		chromium-${PORTVERSION}.tar.xz:main
DISTFILE[2]=		generated:fpcpatch
DF_INDEX=		1 2

SPKGS[std]=		set primary nls

